<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorButtonNormal"
        tools:context=".ServicesActivity">

        <ProgressBar
            android:id="@+id/services_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ScrollView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/servicesTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Servicios"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switchUrlSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ProducciÃ³n " />

                    <ImageView
                        android:id="@+id/clearLogImageView"
                        android:layout_width="49dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        app:srcCompat="@android:drawable/ic_input_delete" />

                    <ImageView
                        android:id="@+id/refreshDataImageView"
                        android:layout_width="49dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="25dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/stat_notify_more" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/formServices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/loggerTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/servicesListView"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:textSize="12sp" />

                        <SearchView
                            android:id="@+id/servicesSearchView"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_below="@id/servicesTitleTextView"
                            android:iconifiedByDefault="false"/>

                        <ListView
                            android:id="@+id/servicesListView"
                            android:layout_width="match_parent"
                            android:layout_height="340dp"
                            android:layout_marginTop="0dp"
                            android:padding="10dp" />

                        <TextView
                            android:id="@+id/emptyTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="250dp"
                            android:text="No hay servicios que mostrar."
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/counterTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/servicesListView"
                            android:layout_marginLeft="10dp"
                            android:text="0 registros"
                            android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

    </RelativeLayout>